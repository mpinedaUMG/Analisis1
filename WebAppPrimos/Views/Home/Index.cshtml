@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string primos = ViewBag.primos;
    @Scripts.Render("~/bundles/NumsJs")

}

<span class="ir-arriba"></span>
<h2>Calculo de serie de numeros primos</h2>
<form id="formNumeros" name="formNumeros" method="post" enctype="multipart/form-data">
    <div class="row containerBlock" id="Seleccion">


        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <div class="form-group">
                <label>Tu nombre es:</label>
                <input type="text" id="slNumero" name="slNombre" class="form-control"  />

                <label>Ingrese el numero:</label>

                    <input type="number" id="slNumero" name="slNumero" class="form-control" value="0" />
            </div>
        </div>

    </div>

    <div class="form-group">
        
            <input name="button" type="submit" class="btn btn-primary" id="btnSend" value="Calcular" />
        
    </div>


</form>

@if (primos != null)
{ 

    <div id="Contenedor">
        @Html.Partial("NumResul")
    </div>

}




